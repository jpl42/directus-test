# General Configuration
SECRET=change_this_to_a_random_string
PUBLIC_URL=https://your-directus-app.onrender.com

# Admin User
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=secure_password_change_me

# Database (Supabase PostgreSQL)
DB_CLIENT=pg
DB_CONNECTION_STRING=postgres://postgres:password@db.example.supabase.co:6543/postgres

# Cache (Redis)
CACHE_ENABLED=true
CACHE_AUTO_PURGE=true
CACHE_STORE=redis
REDIS=redis://default:password@redis.example.com:6379

# File Storage (Supabase S3)
STORAGE_LOCATIONS=supabase
STORAGE_SUPABASE_DRIVER=s3
STORAGE_SUPABASE_KEY=your_supabase_storage_key
STORAGE_SUPABASE_SECRET=your_supabase_storage_secret
STORAGE_SUPABASE_BUCKET=your_bucket_name
STORAGE_SUPABASE_REGION=ca-central-1
STORAGE_SUPABASE_ENDPOINT=https://tysmzjheiqpzqjhdwqze.supabase.co/storage/v1/s3
STORAGE_SUPABASE_FORCE_PATH_STYLE=true

# Email (Resend)
EMAIL_TRANSPORT=smtp
EMAIL_SMTP_HOST=smtp.resend.com
EMAIL_SMTP_PORT=465
EMAIL_SMTP_USER=your_resend_api_key
EMAIL_SMTP_PASSWORD=your_resend_api_key
EMAIL_SMTP_SECURE=true
EMAIL_FROM=no-reply@yourdomain.com

# Security
CORS_ENABLED=true
CORS_ORIGIN=https://your-frontend-app.com

# Performance Configuration
ASSETS_CACHE_TTL=30d
ASSETS_TRANSFORM_MAX_CONCURRENT=10 